<section id="contact" class="py-20">
  <h3 class="text-3xl font-semibold mb-6">Contact Me</h3>
  <form class="grid gap-6 max-w-xl" id="contact-form">
    <input name="name" placeholder="Name" class="input input-bordered" required />
    <input name="email" type="email" placeholder="Email" class="input input-bordered" required />
    <textarea name="message" placeholder="Message" class="textarea textarea-bordered h-32 resize-none" required></textarea>
    <button type="submit" class="bg-blue-500 text-white px-6 py-3 rounded hover:bg-blue-600 transition">Send</button>
  </form>
</section>