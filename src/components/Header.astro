---
import '../styles/global.css'
---

<header class="fixed top-0 z-50 w-full bg-white dark:bg-gray-900 border-b border-black dark:border-white">
  <nav class="w-full px-4 sm:px-6 lg:px-8 py-4 flex justify-between items-center">
    <a href="/" class="text-xl font-bold text-gray-900 dark:text-white">Desxtra</a>

    <!-- Mobile Toggle -->
    <button id="menu-toggle" class="md:hidden text-gray-700 dark:text-gray-300" aria-label="Toggle Menu">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2"
           viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
        <path d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>

    <!-- Desktop Nav -->
    <ul id="nav-links" class="hidden md:flex space-x-6 text-gray-700 dark:text-gray-300 font-medium">
      <li><a href="#about" class="hover:text-green-700 dark:hover:text-orange-700">About</a></li>
      <li><a href="#projects" class="hover:text-green-700 dark:hover:text-orange-700">Projects</a></li>
      <li><a href="#techstack" class="hover:text-green-700 dark:hover:text-orange-700">Tech Stack</a></li>
      <li><a href="#certs" class="hover:text-green-700 dark:hover:text-orange-700">Certs</a></li>
      <li><a href="#contact" class="hover:text-green-700 dark:hover:text-orange-700">Contact</a></li>
    </ul>
  </nav>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="md:hidden hidden flex-col space-y-2 px-6 pb-4 bg-white dark:bg-gray-900/90 backdrop-blur shadow-md">
    <a href="#about" class="block py-2 text-gray-700 dark:text-gray-300 hover:text-green-700 dark:hover:text-orange-700">About</a>
    <a href="#projects" class="block py-2 text-gray-700 dark:text-gray-300 hover:text-green-700 dark:hover:text-orange-700">Projects</a>
    <a href="#techstack" class="block py-2 text-gray-700 dark:text-gray-300 hover:text-green-700 dark:hover:text-orange-700">Tech Stack</a>
    <a href="#certs" class="block py-2 text-gray-700 dark:text-gray-300 hover:text-green-700 dark:hover:text-orange-700">Certs</a>
    <a href="#contact" class="block py-2 text-gray-700 dark:text-gray-300 hover:text-green-700 dark:hover:text-orange-700">Contact</a>
  </div>
</header>

<script is:inline>
  const toggle = document.getElementById('menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  toggle.addEventListener('click', () => {
    mobileMenu.classList.toggle('hidden');
  });
</script>