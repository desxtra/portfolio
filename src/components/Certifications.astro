<script>
  document.addEventListener("DOMContentLoaded", function () {
    const scrollContainer = document.getElementById("scrollContainer");
    const scrollTrack = document.getElementById("scrollTrack");
    const scrollLeft = document.getElementById("scrollLeft");
    const scrollRight = document.getElementById("scrollRight");

    let currentIndex = 0;
    const itemWidth = 292; // w-72 = 288px
    const gap = 16; // gap-4 = 16px
    const scrollAmount = itemWidth + gap;
    const totalItems = scrollTrack.children.length;
    const maxIndex = totalItems - 3; // Show 3 items at once

    // Update scroll position with smooth animation
    function updateScrollPosition() {
      const translateX = -(currentIndex * scrollAmount);
      scrollTrack.style.transform = `translateX(${translateX}px)`;
      updateArrows();
    }

    // Check scroll position and show/hide arrows
    function updateArrows() {
      scrollLeft.style.opacity = currentIndex <= 0 ? "0" : "1";
      scrollLeft.style.pointerEvents = currentIndex <= 0 ? "none" : "auto";

      scrollRight.style.opacity = currentIndex >= maxIndex ? "0" : "1";
      scrollRight.style.pointerEvents =
        currentIndex >= maxIndex ? "none" : "auto";
    }

    // Scroll functions
    scrollLeft.addEventListener("click", () => {
      if (currentIndex > 0) {
        currentIndex--;
        updateScrollPosition();
      }
    });

    scrollRight.addEventListener("click", () => {
      if (currentIndex < maxIndex) {
        currentIndex++;
        updateScrollPosition();
      }
    });

    // Disable manual scrolling
    scrollContainer.addEventListener("wheel", (e) => {
      e.preventDefault();
    });

    scrollContainer.addEventListener("touchmove", (e) => {
      e.preventDefault();
    });

    // Initial state
    updateArrows();
  });
</script>