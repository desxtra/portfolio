<section id="stack" class="py-20 bg-white">
  <div class="max-w-6xl mx-auto px-4">
    <h3 class="text-3xl font-bold text-center mb-12 text-gray-800">Tech Stack</h3>
    <div class="flex flex-wrap justify-center items-center gap-8">
      {[
        { name: "Astro", icon: "🌟" },
        { name: "Hono.js", icon: "🔥" },
        { name: "AWS", icon: "☁️" },
        { name: "Python", icon: "🐍" },
        { name: "Laravel", icon: "🕸️" },
        { name: "Terraform", icon: "🌍" },
        { name: "Tailwind CSS", icon: "💨" },
      ].map(({ name, icon }) => (
        <div class="flex flex-col items-center text-gray-700 hover:scale-105 transition">
          <div class="text-5xl">{icon}</div>
          <p class="mt-2 text-sm font-medium">{name}</p>
        </div>
      ))}
    </div>
  </div>
</section>